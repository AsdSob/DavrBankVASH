@page "/fetchdata"
@using DavrBank.Vash.Client.Services
@inject ICurrencyService CurrencyService
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (CurrencyService.Currencies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>DADA</th>
                <th>Temp. (C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in CurrencyService.Currencies)
            {
                <tr>
                    <td>@forecast.Id</td>
                    <td>@forecast.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    protected override async Task OnInitializedAsync()
    {
        await CurrencyService.GetCurrencies();
    }

}
